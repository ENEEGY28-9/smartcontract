<script lang="ts">
    import { onMount } from 'svelte';
    import { ethers } from 'ethers';
    import { Keypair } from '@solana/web3.js';
    import { Buffer } from 'buffer';
    import { pocketbaseService, type WalletData } from '$lib/services/pocketbaseService';
    
    // Polyfill Buffer for browser environment BEFORE importing bip39
    if (typeof window !== 'undefined') {
        (window as any).Buffer = Buffer;
        (globalThis as any).Buffer = Buffer;
    }
    
    // Import bip39 dynamically after Buffer is available
    let bip39: any = null;
    if (typeof window !== 'undefined') {
        import('bip39').then(module => {
            bip39 = module;
            console.log('‚úÖ bip39 loaded with Buffer support');
        });
    }

    // Wallet data
    interface GeneratedWallet {
        mnemonic: string;
        address: string;
        privateKey: string;
        publicKey: string;
        network: string;
    }

    let isAuthenticated = false;
    let currentUser: any = null;
    let userWallets: WalletData[] = [];
    let isLoadingPage = true;
    
    // Modal states
    let showCreateModal = false;
    let showWalletInfoModal = false;
    let isCreating = false;
    let createError = '';
    
    // Generated wallets
    let generatedWallets: Record<string, GeneratedWallet> = {};
    let hasSeenWalletInfo = false;
    
    // Copy states
    let copiedStates: Record<string, boolean> = {};

    onMount(async () => {
        try {
            console.log('üè¶ Wallet page mounted');
            await checkAuthState();
            
            // Listen for auth changes
            if (typeof window !== 'undefined') {
                window.addEventListener('pocketbase-auth-success', checkAuthState);
                window.addEventListener('pocketbase-auth-logout', checkAuthState);
            }
        } catch (error) {
            console.error('‚ùå Error in onMount:', error);
        } finally {
            isLoadingPage = false;
        }
    });

    async function checkAuthState() {
        try {
            isAuthenticated = pocketbaseService.isAuthenticated();
            currentUser = pocketbaseService.getCurrentUser();
            
            if (isAuthenticated && currentUser) {
                await loadUserWallets();
            }
        } catch (error) {
            console.error('‚ùå Error checking auth state:', error);
            isAuthenticated = false;
            currentUser = null;
        }
    }

    async function loadUserWallets() {
        try {
            userWallets = await pocketbaseService.getUserWallets();
            console.log('üì¶ Loaded wallets:', userWallets.length);
        } catch (error) {
            console.error('‚ùå Error loading wallets:', error);
            // Set empty array to prevent undefined errors
            userWallets = [];
        }
    }

    function openCreateModal() {
        showCreateModal = true;
        createError = '';
    }

    function closeCreateModal() {
        showCreateModal = false;
    }

    function closeWalletInfoModal() {
        showWalletInfoModal = false;
        hasSeenWalletInfo = true;
        generatedWallets = {}; // Clear sensitive data
    }

    async function createWallets() {
        if (!isAuthenticated || !currentUser) {
            createError = 'Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ t·∫°o v√≠';
            return;
        }

        if (!bip39) {
            createError = 'ƒêang t·∫£i th∆∞ vi·ªán v√≠... Vui l√≤ng th·ª≠ l·∫°i sau gi√¢y l√°t';
            // Wait for bip39 to load
            await new Promise(resolve => setTimeout(resolve, 1000));
            if (!bip39) {
                createError = 'Kh√¥ng th·ªÉ t·∫£i th∆∞ vi·ªán v√≠. Vui l√≤ng refresh trang v√† th·ª≠ l·∫°i.';
                return;
            }
        }

        isCreating = true;
        createError = '';

        try {
            console.log('üîÑ Creating wallets for user:', currentUser.id);

            // Generate mnemonic
            const mnemonic = bip39.generateMnemonic();
            console.log('üîë Generated mnemonic');

            const wallets: Record<string, GeneratedWallet> = {};

            // Generate Ethereum wallet
            const ethWallet = ethers.Wallet.fromPhrase(mnemonic);
            wallets.ethereum = {
                mnemonic,
                address: ethWallet.address,
                privateKey: ethWallet.privateKey,
                publicKey: ethWallet.publicKey,
                network: 'ethereum'
            };
            console.log('‚úÖ Ethereum wallet created');

            // Generate Solana wallet
            const seed = await bip39.mnemonicToSeed(mnemonic);
            const solanaKeypair = Keypair.fromSeed(seed.slice(0, 32));
            
            // Convert Uint8Array to hex string without Buffer
            const secretKeyHex = Array.from(solanaKeypair.secretKey)
                .map(byte => byte.toString(16).padStart(2, '0'))
                .join('');
            
            wallets.solana = {
                mnemonic,
                address: solanaKeypair.publicKey.toBase58(),
                privateKey: secretKeyHex,
                publicKey: solanaKeypair.publicKey.toBase58(),
                network: 'solana'
            };
            console.log('‚úÖ Solana wallet created');

            // Generate SUI wallet (simplified demo)
            const suiWallet = ethers.Wallet.fromPhrase(mnemonic);
            wallets.sui = {
                mnemonic,
                address: 'sui' + suiWallet.address.slice(2, 42),
                privateKey: suiWallet.privateKey,
                publicKey: suiWallet.publicKey,
                network: 'sui'
            };
            console.log('‚úÖ SUI wallet created');

            // Save all wallets to database
            for (const [network, wallet] of Object.entries(wallets)) {
                await saveWalletToDatabase({
                    address: wallet.address,
                    private_key: wallet.privateKey,
                    mnemonic: wallet.mnemonic,
                    wallet_type: 'generated',
                    network: wallet.network
                });
            }

            console.log('‚úÖ All wallets saved to database');

            // Show wallet info modal
            generatedWallets = wallets;
            showCreateModal = false;
            showWalletInfoModal = true;

            // Reload wallets list
            await loadUserWallets();

        } catch (error) {
            console.error('‚ùå Error creating wallets:', error);
            createError = 'L·ªói khi t·∫°o v√≠. Vui l√≤ng th·ª≠ l·∫°i.';
        } finally {
            isCreating = false;
        }
    }

    async function saveWalletToDatabase(walletData: any) {
        try {
            // Check if wallet already exists
            const existing = await pocketbaseService.getWalletByAddress(
                walletData.address,
                walletData.network
            );

            if (existing) {
                console.log('Wallet already exists:', walletData.network);
                return existing;
            }

            // Create new wallet
            const saved = await pocketbaseService.createWallet(walletData);
            console.log('üíæ Saved wallet:', saved.network);
            return saved;
        } catch (error) {
            console.error('‚ùå Error saving wallet:', error);
            throw error;
        }
    }

    async function copyToClipboard(text: string, key: string) {
        try {
            await navigator.clipboard.writeText(text);
            copiedStates[key] = true;
            setTimeout(() => {
                copiedStates[key] = false;
            }, 2000);
        } catch (error) {
            console.error('Failed to copy:', error);
        }
    }

    function formatAddress(address: string): string {
        if (address.length <= 12) return address;
        return `${address.slice(0, 6)}...${address.slice(-4)}`;
    }
</script>

