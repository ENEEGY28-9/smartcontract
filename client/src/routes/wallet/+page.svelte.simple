    {#if isLoadingPage}
        <!-- Loading -->
        <div class="loading-container">
            <div class="spinner-large"></div>
            <p>ƒêang t·∫£i...</p>
        </div>
    {:else if !isAuthenticated}
        <!-- Not logged in -->
        <div class="not-logged-in">
            <div class="icon">üîí</div>
            <h2>Vui l√≤ng ƒëƒÉng nh·∫≠p</h2>
            <p>B·∫°n c·∫ßn ƒëƒÉng nh·∫≠p ƒë·ªÉ qu·∫£n l√Ω v√≠ c·ªßa m√¨nh</p>
        </div>
    {:else}
        <!-- Logged in -->
        <div class="wallet-container">
            <div class="wallet-header">
                <h1>Qu·∫£n l√Ω V√≠</h1>
                <p>T·∫°o v√† qu·∫£n l√Ω v√≠ c·ªßa b·∫°n m·ªôt c√°ch an to√†n</p>
            </div>

            <!-- Wallets list -->
            {#if userWallets.length === 0}
                <div class="no-wallets">
                    <div class="icon">üëõ</div>
                    <h2>Ch∆∞a c√≥ v√≠</h2>
                    <p>B·∫°n ch∆∞a c√≥ v√≠ n√†o. T·∫°o v√≠ m·ªõi ƒë·ªÉ b·∫Øt ƒë·∫ßu!</p>
                    <button class="create-wallet-btn" on:click={openCreateModal}>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        T·∫°o v√≠ m·ªõi
                    </button>
                </div>
            {:else}
                <div class="wallets-section">
                    <div class="section-header">
                        <h2>V√≠ c·ªßa b·∫°n ({userWallets.length})</h2>
                        <button class="create-wallet-btn-small" on:click={openCreateModal}>
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            T·∫°o v√≠ m·ªõi
                        </button>
                    </div>

                    <div class="wallets-grid">
                        {#each userWallets as wallet}
                            <div class="wallet-card">
                                <div class="wallet-card-header">
                                    <div class="wallet-network">
                                        {#if wallet.network === 'ethereum'}
                                            <span class="network-icon">‚ü†</span>
                                            <span>Ethereum</span>
                                        {:else if wallet.network === 'solana'}
                                            <span class="network-icon">‚óé</span>
                                            <span>Solana</span>
                                        {:else if wallet.network === 'sui'}
                                            <span class="network-icon">üîµ</span>
                                            <span>SUI</span>
                                        {/if}
                                    </div>
                                    <div class="wallet-type">{wallet.wallet_type}</div>
                                </div>
                                <div class="wallet-address">
                                    <span class="address-label">ƒê·ªãa ch·ªâ:</span>
                                    <span class="address" title={wallet.address}>
                                        {formatAddress(wallet.address)}
                                    </span>
                                    <button 
                                        class="copy-btn" 
                                        on:click={() => copyToClipboard(wallet.address, `address-${wallet.id}`)}
                                    >
                                        {#if copiedStates[`address-${wallet.id}`]}
                                            ‚úì
                                        {:else}
                                            üìã
                                        {/if}
                                    </button>
                                </div>
                                {#if wallet.balance !== undefined}
                                    <div class="wallet-balance">
                                        <span class="balance-label">S·ªë d∆∞:</span>
                                        <span class="balance">{wallet.balance || 0}</span>
                                    </div>
                                {/if}
                            </div>
                        {/each}
                    </div>
                </div>
            {/if}
        </div>
    {/if}
</div>

