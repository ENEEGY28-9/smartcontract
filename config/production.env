# GameV1 Production Environment Configuration
# This file contains all production environment variables

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
POCKETBASE_URL=http://localhost:8090
POCKETBASE_ADMIN_EMAIL=admin2@pocketbase.local
POCKETBASE_ADMIN_PASSWORD=admin123456

# Redis Configuration (if using Redis instead of in-memory)
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=20

# Worker Configuration
WORKER_ENDPOINT=http://localhost:50051
WORKER_POOL_SIZE=10

# Rate Limiting (Production optimized)
RATE_LIMIT_DEFAULT_IP_BURST=10000
RATE_LIMIT_DEFAULT_IP_SUSTAINED=20000
RATE_LIMIT_DEFAULT_USER_BURST=5000
RATE_LIMIT_DEFAULT_USER_SUSTAINED=10000

# Gaming-specific rate limits
RATE_LIMIT_GAMEPLAY_IP_BURST=20000
RATE_LIMIT_GAMEPLAY_USER_BURST=10000
RATE_LIMIT_CHAT_IP_BURST=5000
RATE_LIMIT_CHAT_USER_BURST=2000

# Security Configuration
JWT_SECRET_KEY=your-production-jwt-secret-key-change-this
JWT_EXPIRATION_HOURS=24
BCRYPT_COST=12

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Logging Configuration
RUST_LOG=info,gateway=info,worker=info
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/opt/gamev1/logs/gamev1.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Performance Configuration
CONNECTION_POOL_SIZE=50
CONNECTION_POOL_TIMEOUT=30
DATABASE_CONNECTION_TIMEOUT=10
DATABASE_CONNECTION_MAX_LIFETIME=3600

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PONG_TIMEOUT=10
WEBSOCKET_COMPRESSION=true

# WebRTC Configuration
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_MAX_CONNECTIONS=5000
WEBRTC_TIMEOUT=30

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=3

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_COLLECTION_INTERVAL=15

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Resource Limits
MEMORY_LIMIT=2GB
CPU_LIMIT=4
MAX_CONNECTIONS=10000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=6h
BACKUP_RETENTION=7d
BACKUP_PATH=/opt/gamev1/backups

# Feature Flags
ENABLE_CHAT=true
ENABLE_VOICE_CHAT=false
ENABLE_VIDEO_CHAT=false
ENABLE_SCREEN_SHARE=false
ENABLE_REPLAY_SYSTEM=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARDS=true

# Game Configuration
DEFAULT_GAME_MODE=classic
DEFAULT_MAX_PLAYERS=8
DEFAULT_TIME_LIMIT=600
DEFAULT_DIFFICULTY=medium

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION=90d
ANALYTICS_SAMPLE_RATE=0.1

# Development/Debug (set to false in production)
DEBUG_MODE=false
PROFILING_ENABLED=false
TEST_MODE=false

# Environment
NODE_ENV=production
ENVIRONMENT=production
