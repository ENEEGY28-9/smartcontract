# Production Environment Configuration
# Copy this file to .env and update values

# Solana Configuration
SOLANA_CLUSTER=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Auto-mint Configuration
AUTO_MINT_INTERVAL=60000          # 1 minute in milliseconds
TOKENS_PER_MINT=100               # 100 tokens per minute
OWNER_SHARE_PERCENT=20            # 20% to owner wallet
GAME_SHARE_PERCENT=80             # 80% to game pool

# Program Configuration (auto-filled by deploy script)
PROGRAM_ID=
WALLET_PRIVATE_KEY=               # Only for testing, use hardware wallet in production

# Monitoring Configuration
LOG_LEVEL=info
METRICS_ENABLED=true

# Emergency Controls
PAUSE=false                       # Set to true to pause auto-mint
EMERGENCY_STOP=false              # Set to true for emergency stop

# Game Configuration
MIN_EARN_AMOUNT=1                 # Minimum tokens player can earn
MAX_EARN_PER_MINUTE=10            # Rate limiting for players
POOL_MINIMUM=1000                 # Minimum pool balance before alerts

# Database Configuration (future use)
DATABASE_URL=
REDIS_URL=

# Notification Settings (future use)
DISCORD_WEBHOOK_URL=
EMAIL_ALERTS=true









